@model IEnumerable<BlackJack.ViewModels.GameServiceViewModels.HistoryGameView>

@{
    ViewBag.Title = "Games history";
}

<h2>Games history</h2>

<p>
    @Html.ActionLink("Start new game", "Start")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DealerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DealerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerName)
        </td>
        <td>
            @Html.ActionLink("Look game's results", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
